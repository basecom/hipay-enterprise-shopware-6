  ],
  "type": "shopware-platform-plugin",  
  "extra": {
    "shopware-plugin-class": "HiPay\\Payment\\HiPayPaymentPlugin",
    "plugin-icon" : "src/Resources/config/hipay.png",
    "author" : "HiPay",
    "label": {
      "en-GB": "HiPay Payment",
      "de-DE": "HiPay Payment"
    },
    "description": {
      "en-GB": "Hipay enterprise module for Shopware",
      "de-DE": "Hipay Enterprise-Modul f\u00fcr Shopware"
    },
    "manufacturerLink": {
      "en-GB": "#",
      "de-DE": "#"
    },
    "supportLink": {
      "en-GB": "#",
      "de-DE": "#"
    }
  },
  "autoload": {
    "psr-4": {
      "HiPay\\Payment\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {  
      "HiPay\\Payment\\Tests\\": "tests/"
    }
  },
  "require": {
    "shopware/core": "6.4.*",
    "hipay/hipay-fullservice-sdk-php": "^2.10"
  },
