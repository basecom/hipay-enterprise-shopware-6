    <hipay-settings-cards-selector :is-loading="isLoading"
      :paymentMethod="paymentMethod"></hipay-settings-cards-selector>
  </template>
  <template v-if="paymentMethod.formattedHandlerIdentifier == 'handler_hipay_multibanco'">
